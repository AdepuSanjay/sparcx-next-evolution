{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },          // serve static files if they exist
    { "src": "/.*", "dest": "/index.html" } // otherwise serve index.html (SPA fallback)
  ]
}